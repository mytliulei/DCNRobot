global env
# Results of all Ixia tests will be placed in this directory
set env(IXIA_RESULTS_DIR)   [file dirname [file dirname [info library]]]

# Run-time Logs of all Ixia tests will be placed in this directory
set env(IXIA_LOGS_DIR)      [file dirname [file dirname [info library]]]

# The Samples files are located under this directory
set env(IXIA_SAMPLESDIR)    [file dirname [file dirname [info library]]]


